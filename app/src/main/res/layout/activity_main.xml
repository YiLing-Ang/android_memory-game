<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <EditText
            android:id="@+id/inputTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Your URL Here"
            android:inputType="textWebEmailAddress"
            android:lines="1"
            android:minLines="1"
            ></EditText>

        <Button
            android:id="@+id/btnFetch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:text="FETCH"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">
        <ImageView
            android:id="@+id/image1"
            style="@style/MainActivity_Image"
            />

        <ImageView
            android:id="@+id/image2"
            style="@style/MainActivity_Image" />

        <ImageView
            android:id="@+id/image3"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image4"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image5"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image6"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image7"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image8"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image9"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image10"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image11"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image12"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image13"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image14"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image15"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image16"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image17"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image18"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image19"
            style="@style/MainActivity_Image"
            />
        <ImageView
            android:id="@+id/image20"
            style="@style/MainActivity_Image"
            />
    </GridLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:minHeight="25dp"
        android:minWidth="250dp"
        android:layout_gravity="center_horizontal"
        android:max="20"
        android:progress="0" />
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
